<div class="container">
  <div class="row">
    <div class="user-container col-md-3">
      <div>
        <%= image_tag('user_profile_img.png', :class => 'profile-picture') %>
      </div>
      <div>
        <p><%= @user.name %><br>
        Current City: <%= @user.city %><br>
        Joined: <%= @user.created_at.getlocal %></p>
      </div>
    </div>
    <div class="posts-container col-md-8">
      <% if !@user.posts.empty?%>
        <h4> Posts: </h4>
        <% @user.posts.each do |ele|  %>
          <h5><%=ele.title%></h5>
          <p><%=ele.content%></p>
          <p><%=ele.city%></p>
        <% end %>
      <%else%>
        <h4>No Posts Yet</h4>
      <%end%>
    </div>
  </div>
</div>
