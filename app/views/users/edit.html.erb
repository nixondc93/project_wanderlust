<div class="content-container .col-md-6 .col-md-offset-3">
  <p>Edit User</p>
    <% if @user.avatar.url %>
      <%= image_tag(@user.avatar.url, :class => 'profile-picture') %>
    <% else %>
      <%= image_tag('missing.png', :class => 'profile-picture') %>
    <% end %>
    <%= form_for :user, url: '/profile', :method => :put do |f| %>
      <p>Name: <%= f.text_field :name %></p>
      <p>Current City: <%= f.text_field :city %></p><br>
      <p>Profile Image: <%= f.label :avatar %><br>
                        <%= f.file_field :avatar %></p>
      <%= link_to("Save Changes", profile_path, :method => :put, class: "btn btn-primary" ) %> <%= link_to("Cancel", profile_path, class: "btn btn-default") %>
    <% end %>
</div>
