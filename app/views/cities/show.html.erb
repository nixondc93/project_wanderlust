<h1><%= params[:name] %></h1>
<%= image_tag(params[:name]+'.jpg', :class => 'iconic-picture') %>
<%= link_to 'New Post', new_post_path %><br>
<div class="city-post col-md-8 col-md-offset-3">
  <% @city.each do |city| %>
    <div class="post">
      <%= image_tag(User.find(city.user_id).avatar.url, class: 'post-pic') %>
      <p class="post"><%= link_to city.title,  post_path(city.title)%><br>
      <%= city.content %></p>
    </div><br>
    <h4>Comments</h4>
    <%city.comments.each do |comment| %>
    <p><span><b><%= comment.user.name%>:</b> </span><%=comment.content%></p>
    <%= form_for @comment, url: '/comments' do |f| %>
      <p><%= f.text_area :content %></p>
      <%= f.hidden_field :user_id, :value => city.user_id%>
      <%= f.hidden_field :post_id, :value => city.id %>
      <%= f.submit %>
    <% end %>
  <% end %>
</div>
