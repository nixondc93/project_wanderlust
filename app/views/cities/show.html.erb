<h1><%= params[:name] %></h1>
<%= image_tag(params[:name]+'.jpg', :class => 'iconic-picture') %>
<%= link_to 'New Post', new_post_path %>
<% @city.each do |city| %>
  <h3><b><%= link_to city.title,  post_path(city.title)%></b></h3>
  <p><%= city.content %></p>
  <h4>Comments</h4>
  <%city.comments.each do |comment| %>
  <p><span><b><%= comment.user.name%>:</b> </span><%=comment.content%></p>
  <%= form_for @comment, url: '/comments' do |f| %>
    <p><%= f.text_area :content %></p>
    <%= f.hidden_field :user_id, :value => city.user_id%>
    <%= f.hidden_field :post_id, :value => city.id %>
    <%= f.submit %>
  <% end %>
  <%end%>


<% end %>
