<!DOCTYPE html>
<html>
  <head>
    <title>ProjectWanderlust</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-header">
        <%= link_to('Wanderlust', '/', class: 'navbar-brand') %>
      </div>
      <div class="nav-btns pull-right">
        <% if current_user %>
          <%= link_to('Signed in as ' +current_user.name, '/profile', :method => :get, class: 'btn btn-success nav-btn') %> <%= link_to("Logout", '/logout', :method => :get, class: 'btn btn-success nav-btn') %>
        <% else %>
          <%= link_to('Login', '/login', :method => :get, class: 'btn btn-success nav-btn') %> <%= link_to('Signup', '/signup', :method => :get, class: 'btn btn-success nav-btn') %>
        <% end %>
      </div>
    </nav>

    <div class="jumbotron clearfix">
      <div class="container">
      <% flash.each do |name, msg| %>
        <div class="error-message">! <%= msg %> !</div>
      <% end %>

      <%= yield %>
      </div>
    </div>

  </body>
</html>
