<div class="container">
  <div class="new-post .col-md-6 .col-md-offset-3">
    <p>New Post</p>
    <p><%= form_for @post, url:"/posts" do |f| %>
      <label>Title: </label>
      <%= f.text_field :title %><br>
      <span>Content: </span>
      <%= f.text_field :content %><br>
      <span>City:</span>
      <%= f.text_field :city %><br>
      <%= f.hidden_field :user_id, :value => @user_id %>
      <%= f.submit %>
    <% end %> </p>
  </div>
</div>
